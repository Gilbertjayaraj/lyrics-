    <!-- YouTube Player -->
    <div id="yt-player" style="display:none;"></div>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script>
        const lyrics = [
            "கருப்பி என் கருப்பி, எங்க போனாய் கருப்பி?",
            "உன் நினைவுகள் நெஞ்சை உருக்குது...",
            "பார்த்த பாசம் போச்சே, வாழ்க்கை வஞ்சம் ஆச்சே...",
            "எங்கோ நீ தொலைந்தாயே..."
        ];
        let index = 0;
        const box = document.getElementById('lyrics-box');
        function showLyrics() {
            box.innerHTML = lyrics[index];
            index = (index + 1) % lyrics.length;
        }
        setInterval(showLyrics, 4000);
        showLyrics();

        function showTab(id){
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        let player;
        function onYouTubeIframeAPIReady(){
            player = new YT.Player('yt-player', {
                videoId: '5IXdCWhQG78',
                events: { 'onReady': onPlayerReady }
            });
        }
        function onPlayerReady(){
            document.getElementById('playBtn').onclick = () => {
                player.playVideo();
                document.getElementById('playBtn').innerText = 'Pause Music';
                document.getElementById('playBtn').onclick = () => {
                    player.pauseVideo();
                    document.getElementById('playBtn').innerText = 'Play Music';
                };
            };
        }
    </script>
